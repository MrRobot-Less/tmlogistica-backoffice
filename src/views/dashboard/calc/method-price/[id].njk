{% extends "templates/dashboard-template.njk" %}
{% block contentpage %}
<form method="post" class="">
	<div class="block md:max-w-3xl mx-auto bg-white p-10 rounded-md *:py-2.5">
		<div>
			<label for="initialWeight" class="block text-sm text-gray-900 font-bold">Peso inicial</label>
			<input value="{{ methodPrice.initialWeight }}" name="initialWeight" id="initialWeight" required="true" type="string" autocomplete="N/A" class="border invalid::border-red-500  block w-full rounded-md py-1 px-2 shadow-sm focus:border-sky-500">
			<span class='text-xs text-gray-500'>Ex: 0.250</span>
		</div>
		<div>
			<label for="finalWeight" class="block text-sm text-gray-900 font-bold">Peso Final</label>
			<input value="{{ methodPrice.finalWeight }}" name="finalWeight" id="finalWeight" required="true" type="string" autocomplete="N/A" class="border invalid::border-red-500  block w-full rounded-md py-1 px-2 shadow-sm focus:border-sky-500">
			<span class='text-xs text-gray-500'>Ex: 0.500</span>
		</div>
		<div>
			<label for="value" class="block text-sm text-gray-900 font-bold">Valor</label>
			<input value="{{ methodPrice.value }}" name="value" id="value" required="true" type="number" autocomplete="N/A" class="border invalid::border-red-500  block w-full rounded-md py-1 px-2 shadow-sm focus:border-sky-500">
		</div>
		<div class="border-t invalid::border-red-500-t border-gray-200 flex space-x-2 justify-end">
			<button class="w-fit bg-blue-500 py-2 px-2.5 rounded transition duration-200 bg-gradient-to-r hover:from-blue-600 hover:to-blue-600 text-white" type="submit">
				<i class="fas fa-save"></i><span class="ml-2 max-lg:hidden">{% if methodPrice %}Salvar{%else%}Adicionar{% endif%}</span>
			</button>
			{% if methodPrice %}
			<a class="w-fit bg-red-500 py-2 px-2.5 rounded transition duration-200 bg-gradient-to-r hover:from-red-800 hover:to-red-800 text-white" href="/dashboard/calc/method-price/{{methodPrice._id}}/delete">
				<i class="fas fa-trash"></i><span class="ml-2 max-lg:hidden">Excluir</span>
			</a>
			{% endif %}
		</div>
	</div>
</form>

{% endblock %}