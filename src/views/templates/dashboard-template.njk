{% extends "templates/base.njk" %}
{% block contents %}
<div class="flex flex-col bg-gray-100 relative overflow-hidden max-h-dvh">
    {% include "components/navbar-header.njk" %}    
    <div class="flex" style="max-height: var(--dashboard-height);">
        <div class="p-2 bg-white h-auto md:w-60 flex-col md:flex hidden md:relative w-full shadow-md z-10 left-0 absolute md:shadow-none" id="sideNav">
            <nav>
                <a class="block text-gray-500 py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r hover:from-blue-700 hover:to-blue-700 hover:text-white" href="#">
                    <i class="fas fa-home mr-2"></i>Início
                </a>
                <a class="block text-gray-500 py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r hover:from-blue-700 hover:to-blue-700 hover:text-white" href="#">
                    <i class="fas fa-file-alt mr-2"></i>Pedidos
                </a>
                <a class="block text-gray-500 py-2.5 px-4 my-4 rounded transition duration-200 hover:bg-gradient-to-r hover:from-blue-700 hover:to-blue-700 hover:text-white" href="#">
                    <i class="fas fa-users mr-2"></i>Usuários
                </a>
            </nav>
            <a class="block text-gray-500 py-2.5 px-4 my-2 rounded transition duration-200 hover:bg-gradient-to-r hover:from-blue-700 hover:to-blue-700 hover:text-white mt-auto" href="#">
                <i class="fas fa-sign-out-alt mr-2"></i>Sair
            </a>
            <div class="bg-gradient-to-r from-blue-300 to-blue-700 h-px mt-2"></div>
            <p class="mb-1 px-5 py-3 text-left text-xs text-blue-700">Copyright MrRobot@2024</p>
        </div>
        <div class="flex-1 p-4 w-full md:w-1/2 overflow-y-scroll">
            {% block contentpage %}
            {% endblock %}
        </div>
    </div>
</div>
<script>
	const menuBtn = document.getElementById('menuBtn');
	const sideNav = document.getElementById('sideNav');

	menuBtn.addEventListener('click', () => {
		sideNav.classList.toggle('hidden');
	});
</script>
{% endblock %}
